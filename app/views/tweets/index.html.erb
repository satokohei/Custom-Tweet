<div style="width: 300px; margin: auto;">
  <ul class="media-list">
  <%@tweets.each do |tweet|%>
    <li class="media" style="background-image: url(<%= tweet.image %>); background-repeat: no-repeat; width: 300px;
    height: 300px; list-style:none">
  　</li>
    <li class="media">

    <%= link_to 'ユーザー名', user_path(tweet.user.id), method: :get %>
    <%= tweet.name %>
    </li>
    <li class="media">ドリンク名<%= tweet.drink_name %></li>
    <li class="media">追加したカスタム<%= tweet.custom_name %></li>
    <li class="media">
      
<% if current_user %>
 <%= form_tag("/tweets/#{tweet.id}/comments", method: :post) do %>
 <textarea cols="30" name="text" placeholder="このカスタマイズについて自由にコメントお願いします"rows="2"></textarea>
 <input type="submit" value="SENT">
 <% end %>
<% end %>

    </li>
  <% end %>
  </ul>
 <%= paginate(@tweets) %>
</div>
